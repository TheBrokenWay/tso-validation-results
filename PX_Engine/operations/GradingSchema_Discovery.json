{
  "schema_name": "Weighted MPO Grading Schema",
  "version": "2.0-weighted",
  "created": "2026-02-11",
  "description": "100-point weighted multi-parameter optimization (MPO) scoring system",
  "max_score": 100,
  "tier_thresholds": {
    "DIAMOND_TIER": {"min_percentage": 85, "description": "Exceptional candidates"},
    "GOLD_TIER": {"min_percentage": 70, "description": "Strong candidates"},
    "SILVER_TIER": {"min_percentage": 50, "description": "Moderate candidates"},
    "BRONZE_TIER": {"min_percentage": 0, "description": "Weak candidates"}
  },
  "hard_limits": {
    "toxicity_index": {"max": 0.0210, "law": "L11", "description": "Constitutional toxicity hard limit"},
    "herg_risk": {"max": 0.5, "description": "Cardiac safety hard limit"},
    "zeus_gate": {"required": true, "description": "Must pass if present at grading time"},
    "constitutional_violations": {"max_count": 0, "description": "No constitutional violations allowed"}
  },
  "categories": {
    "efficacy": {
      "weight": 30,
      "sub_scores": {
        "ic50_ec50": {"max": 20, "missing_default": 10},
        "emax": {"max": 10, "missing_default": 5}
      }
    },
    "safety": {
      "weight": 25,
      "sub_scores": {
        "toxicity": {"max": 15, "missing_default": 5},
        "safety_margin": {"max": 7, "missing_default": 3},
        "herg": {"max": 3, "missing_default": 2}
      }
    },
    "pk": {
      "weight": 20,
      "sub_scores": {
        "bioavailability": {"max": 8, "missing_default": 4},
        "half_life": {"max": 6, "missing_default": 3},
        "clearance": {"max": 3, "missing_default": 1.5},
        "vd": {"max": 3, "missing_default": 1.5}
      }
    },
    "druglikeness": {
      "weight": 10,
      "sub_scores": {
        "lipinski": {"max": 4},
        "qed": {"max": 6, "missing_default": 3}
      },
      "modifiers": {
        "constraint_violations": {"per_violation": -1, "max_penalty": -3}
      }
    },
    "manufacturability": {
      "weight": 10,
      "sub_scores": {
        "synthesis_steps": {"max": 7, "missing_default": 3.5},
        "yield": {"max": 3, "missing_default": 1.5}
      }
    },
    "fto": {
      "weight": 5,
      "sub_scores": {
        "fto_status": {"max": 5, "missing_default": 2.5}
      }
    }
  }
}
